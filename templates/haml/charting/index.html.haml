      %h4
        %a.pjaxload{:href => url_for('/charting/application')}= l('Java Charts')
      %p= l('Try our downloadable charting application with an extensive range of indicators.')
  .grd-grid-6.grd-parent
    .grd-grid-8.grd-with-padding
      %a.pjaxload{:href => url_for('/charting/livechart')}
        %img.responsive.chart-type-icon{:src => url_for('images/pages/charting/popup-charts.svg')}
    .grd-grid-12
      %h4
        %a.pjaxload{:href => url_for('/charting/livechart')}= l('Live Charts')
      %p= l('This is our \'next generation\' charting tool.')
.grd-grid-6.grd-grid-mobile-12.grd-parent
  .grd-grid-6.grd-parent
    .grd-grid-8.grd-with-padding
      %a.pjaxload{:href => '//highcharts.binary.com', :target => '_blank'}
        %img.responsive.chart-type-icon{:src => url_for('images/pages/charting/highcharts.svg')}
